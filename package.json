{
  "name": "@rinminase/ng-charts",
  "description": "Reactive, responsive, beautiful charts for Angular based on ng2-charts",
  "homepage": "https://github.com/RinMinase/ng-charts#readme",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Rin Minase",
  "main": "src/public_api.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RinMinase/ng-charts.git"
  },
  "keywords": [
    "chart.js",
    "ng2-charts",
    "angular"
  ],
  "scripts": {
    "build": "ng-packagr -p ng-package.json && rm -rf dist/out-tsc",
    "release": "cd dist && npm publish --access=public && cd ..",
    "release-it": "release-it --ci --no-increment --verbose"
  },
  "peerDependencies": {
    "@angular/common": "^7.2.0 || ^8.0.0 || ^9.0.0",
    "@angular/core": "^7.2.0 || ^8.0.0 || ^9.0.0",
    "rxjs": "^6.5.4"
  },
  "dependencies": {
    "@types/chart.js": "^2.7.48",
    "chart.js": "^2.7.3",
    "lodash-es": "^4.17.11"
  },
  "devDependencies": {
    "@angular/compiler": "^9.0.0",
    "@angular/compiler-cli": "^9.0.0",
    "@angular/core": "^9.0.0",
    "@types/lodash-es": "^4.17.3",
    "ng-packagr": "^9.0.0",
    "release-it": "^12.4.3",
    "typescript": "^3.7.5"
  },
  "release-it": {
    "git": {
      "addUntrackedFiles": false,
      "commit": false,
      "tag": false,
      "push": false,
      "requireCleanWorkingDir": false
    },
    "github": {
      "release": false,
      "releaseName": "${version}",
      "assets": "dist/*.css"
    },
    "npm": {
      "publish": true,
      "publishPath": "dist",
      "publishConfig": {
        "access": "public"
      }
    }
  }
}
