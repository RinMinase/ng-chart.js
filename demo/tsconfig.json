{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es2020",
    "declaration": false,
    "inlineSources": false,
    "emitDecoratorMetadata": false,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@app/*": ["src/app/*"]
    }
  },
  "files": [ "src/index.ts", ],
  "include": [ "src/**/*" ]
}
